class Goleiro {
    field int lado; 

    constructor Goleiro new(int mandoDeCampo) {
        let lado = mandoDeCampo;
        do colocaEmCampo();
        return this;
    }

    method void colocaEmCampo() {
      do Screen.setColor(true);
      if (lado = 1) { do Screen.drawRectangle(10, 88, 20, 168); }
      if (lado = 2) { do Screen.drawRectangle(492, 88, 502, 168); }
      return;
    }
}